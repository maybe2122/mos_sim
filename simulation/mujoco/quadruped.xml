<mujoco model="quadruped">
  <compiler angle="degree" coordinate="local" inertiafromgeom="true"/>
  <option integrator="RK4" timestep="0.01"/>
  <custom>
    <numeric data="0.0 0.0 0.55 1.0 0.0 0.0 0.0" name="init_qpos"/>
  </custom>
  <default>
    <joint armature="1" damping="1" limited="true"/>
    <geom conaffinity="0" condim="3" density="5.0" friction="1 0.5 0.5" margin="0.01" rgba="0.8 0.6 0.4 1"/>
  </default>
  <asset>
    <texture builtin="gradient" height="100" rgb1="1 1 1" rgb2="0 0 0" type="skybox" width="100"/>
    <texture builtin="flat" height="1278" mark="cross" markrgb="1 1 1" name="texgeom" random="0.01" rgb1="0.8 0.6 0.4" rgb2="0.8 0.6 0.4" type="cube" width="127"/>
    <material name="MatGnd" reflectance="0.5" shininess="1" specular="1" texrepeat="60 60" texture="texgeom"/>
    <material name="geom" texture="texgeom" texuniform="true"/>
  </asset>
  <worldbody>
    <light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.3" directional="true" exponent="1" pos="0 0 1.3" specular=".1 .1 .1"/>
    <geom conaffinity="1" condim="3" name="floor" pos="0 0 0" rgba="0.8 0.9 0.8 1" size="20 20 0.1" type="plane" material="MatGnd"/>
    <body name="torso" pos="0 0 0.3">
      <camera name="track" mode="trackcom" pos="0 -3 0.3" xyaxes="1 0 0 0 0 1"/>
      <geom name="torso_geom" pos="0 0 0" size="0.1 0.05 0.02" type="box"/>
      <joint armature="0" damping="0" limited="false" margin="0.01" name="root" pos="0 0 0" type="free"/>

      <!-- Front-Right Leg -->
      <body name="FR_hip" pos="0.1 -0.05 0">
        <joint axis="1 0 0" name="FR_hip_joint" pos="0 0 0" range="-30 30" type="hinge"/>
        <geom fromto="0 0 0 0 -0.05 0" name="FR_hip_geom" size="0.02" type="capsule"/>
        <body name="FR_thigh" pos="0 -0.05 0">
          <joint axis="0 1 0" name="FR_thigh_joint" pos="0 0 0" range="-60 60" type="hinge"/>
          <geom fromto="0 0 0 0 0 -0.1" name="FR_thigh_geom" size="0.02" type="capsule"/>
          <body name="FR_calf" pos="0 0 -0.1">
            <joint axis="0 1 0" name="FR_calf_joint" pos="0 0 0" range="-150 -30" type="hinge"/>
            <geom fromto="0 0 0 0 0 -0.1" name="FR_calf_geom" size="0.02" type="capsule"/>
          </body>
        </body>
      </body>

      <!-- Front-Left Leg -->
      <body name="FL_hip" pos="0.1 0.05 0">
        <joint axis="1 0 0" name="FL_hip_joint" pos="0 0 0" range="-30 30" type="hinge"/>
        <geom fromto="0 0 0 0 0.05 0" name="FL_hip_geom" size="0.02" type="capsule"/>
        <body name="FL_thigh" pos="0 0.05 0">
          <joint axis="0 1 0" name="FL_thigh_joint" pos="0 0 0" range="-60 60" type="hinge"/>
          <geom fromto="0 0 0 0 0 -0.1" name="FL_thigh_geom" size="0.02" type="capsule"/>
          <body name="FL_calf" pos="0 0 -0.1">
            <joint axis="0 1 0" name="FL_calf_joint" pos="0 0 0" range="-150 -30" type="hinge"/>
            <geom fromto="0 0 0 0 0 -0.1" name="FL_calf_geom" size="0.02" type="capsule"/>
          </body>
        </body>
      </body>

      <!-- Back-Right Leg -->
      <body name="BR_hip" pos="-0.1 -0.05 0">
        <joint axis="1 0 0" name="BR_hip_joint" pos="0 0 0" range="-30 30" type="hinge"/>
        <geom fromto="0 0 0 0 -0.05 0" name="BR_hip_geom" size="0.02" type="capsule"/>
        <body name="BR_thigh" pos="0 -0.05 0">
          <joint axis="0 1 0" name="BR_thigh_joint" pos="0 0 0" range="-60 60" type="hinge"/>
          <geom fromto="0 0 0 0 0 -0.1" name="BR_thigh_geom" size="0.02" type="capsule"/>
          <body name="BR_calf" pos="0 0 -0.1">
            <joint axis="0 1 0" name="BR_calf_joint" pos="0 0 0" range="-150 -30" type="hinge"/>
            <geom fromto="0 0 0 0 0 -0.1" name="BR_calf_geom" size="0.02" type="capsule"/>
          </body>
        </body>
      </body>

      <!-- Back-Left Leg -->
      <body name="BL_hip" pos="-0.1 0.05 0">
        <joint axis="1 0 0" name="BL_hip_joint" pos="0 0 0" range="-30 30" type="hinge"/>
        <geom fromto="0 0 0 0 0.05 0" name="BL_hip_geom" size="0.02" type="capsule"/>
        <body name="BL_thigh" pos="0 0.05 0">
          <joint axis="0 1 0" name="BL_thigh_joint" pos="0 0 0" range="-60 60" type="hinge"/>
          <geom fromto="0 0 0 0 0 -0.1" name="BL_thigh_geom" size="0.02" type="capsule"/>
          <body name="BL_calf" pos="0 0 -0.1">
            <joint axis="0 1 0" name="BL_calf_joint" pos="0 0 0" range="-150 -30" type="hinge"/>
            <geom fromto="0 0 0 0 0 -0.1" name="BL_calf_geom" size="0.02" type="capsule"/>
          </body>
        </body>
      </body>
    </body>
  </worldbody>
  <actuator>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="FR_hip_joint"/>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="FR_thigh_joint"/>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="FR_calf_joint"/>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="FL_hip_joint"/>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="FL_thigh_joint"/>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="FL_calf_joint"/>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="BR_hip_joint"/>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="BR_thigh_joint"/>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="BR_calf_joint"/>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="BL_hip_joint"/>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="BL_thigh_joint"/>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="100" joint="BL_calf_joint"/>
  </actuator>
</mujoco>
